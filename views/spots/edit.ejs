<% layout('./layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Travel Spot</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/spots/<%= spot._id %>?_method=PUT"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="spot[title]"
          id="title"
          value="<%= spot.title %>"
          required
        />
        <div class="invalid-feedback">Please provide a valid title.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Grocery Store</label>
        <input
          class="form-control"
          type="text"
          name="spot[market]"
          id="market"
          value="<%= spot.market %>"
          required
        />
        <div class="invalid-feedback">Please provide a valid shop.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Official Link</label>
        <input
          class="form-control"
          type="url"
          name="spot[website]"
          id="website"
          value="<%= spot.website %>"
        />
        <!-- <div class="valid-feedback">Looks good!</div> -->
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="spot[location]"
          id="location"
          value="<%= spot.location %>"
          required
        />
        <div class="invalid-feedback">Please provide a valid location.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="number"
            class="form-control"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            id="price"
            name="spot[price]"
            value="<%= spot.price %>"
            required
          />
          <div class="invalid-feedback">Please provide a valid number.</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          name="spot[description]"
          id="description"
          required
        >
          <%= spot.description %>
        </textarea>
        <div class="invalid-feedback">Please provide some description.</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Add more image(s)</label>
        <input
          class="form-control"
          type="file"
          id="image"
          name="image"
          multiple
        />
      </div>
      <div class="mb-3">
        <% spot.images.forEach(function(img, i) { %>
        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="" />
        <div class="form-check-inline">
          <input
            type="checkbox"
            id="image-<%= i %>"
            name="deleteImages[]"
            value="<%= img.filename %>"
          />
        </div>
        <label for="image-<%= i %>">Delete this image</label>
        <br />
        <% }) %>
      </div>
      <div class="mb-3">
        <button class="btn btn-warning">Update Spot</button>
      </div>
    </form>
    <a href="/spots">Back To Travel Spots</a>
  </div>
</div>
