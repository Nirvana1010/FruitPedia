<% layout('./layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Edit Travel Spot</h1>
  <div class="col-6 offset-3">
    <form action="/spots/<%= spot._id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="spot[title]"
          id="title"
          value="<%= spot.title %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="spot[location]"
          id="location"
          value="<%= spot.location %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          name="spot[image]"
          id="image"
          value="<%= spot.image %>"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="text"
            class="form-control"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            id="price"
            name="spot[price]"
            value="<%= spot.price %>"
          />
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          name="spot[description]"
          id="description"
        >
          <%= spot.description %>
        </textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-info">Update Spot</button>
      </div>
    </form>
    <a href="/spots">Back To Travel Spots</a>
  </div>
</div>
