<% layout('./layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Seasonal Fruit</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/spots"
      method="POST"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="spot[title]"
          id="title"
          required
        />
        <div class="invalid-feedback">Please provide a valid title.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="market">Grocery Store</label>
        <input
          class="form-control"
          type="text"
          name="spot[market]"
          id="market"
          required
        />
        <div class="invalid-feedback">Please provide a valid shop.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="website">Official Link</label>
        <input
          class="form-control validationUrl"
          type="url"
          name="spot[website]"
          id="website"
          value=""
          placeholder="https://example.com"
        />
        <!-- <div class="invalid-feedback">Please provide a valid title.</div> -->
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          name="spot[location]"
          id="location"
          required
        />
        <div class="invalid-feedback">Please provide a valid location.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="number"
            class="form-control"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            id="price"
            name="spot[price]"
            required
          />
          <div class="invalid-feedback">Please provide a valid number.</div>
        </div>
        <div class="invalid-feedback">Please provide a valid number.</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          name="spot[description]"
          id="description"
          required
        ></textarea>
        <div class="invalid-feedback">Please provide some description.</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Choose image(s)</label>
        <input
          class="form-control"
          type="file"
          id="image"
          name="image"
          multiple
        />
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Fruit</button>
      </div>
    </form>
    <a href="/spots">All Seasonal Fruits</a>
  </div>
</div>
